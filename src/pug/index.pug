          +e.A.tel(href="tel:+79183650607") +7 918 365 06 07

        +b.description
          +e.H1.title Студия <br/> Пилатеса
          +e.P.slogan Твоё здоровое тело через 10 занятий
          +e.A.to-see-schedule(href="#screen3") Смотреть расписание

        +b.PICTURE.girls
          source(media="(min-width: 1366px)", srcset="images/girl-desktop.png")
          source(media="(min-width: 764px)", srcset="images/girl-tablet.png")
          +e.IMG.img(src="images/girl.png" alt="Девушка")

      +b.NAV.nav
        +e.BUTTON.close(aria-label="Закрыть меню")
        +b.UL.main-menu
          each text, index in menu
            +e.LI.item
              +e.A.link(href='#screen'+(index+2) title=text)= text

    +b#screen2.SECTION.section(data-tooltip=menu[0])
      .container
        +title-section(menu[0])
        include components/sections/section-2


