  meta(name='author' content='Студия Пилатеса')

  main(id='full-page')
    section.section(data-tooltip="")
      .container
        +b.HEADER.header
          +logo()
          +e.BUTTON.nav-toggler
            +vis-hid("Открыть меню")
            svg.svg-icon.toggler-icon(width="25" height="18" focusable="false" aria-hidden="true")
